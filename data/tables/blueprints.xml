        <Property type="GraphicsFeature::GraphicsProperty" />
        <Property type="PhysicsFeature::PhysicsProperty" />
    </Entity>
    <Entity cppclass="Entity" type="SimpleScripted" desc="a simple scripted entity">
        <Property type="GraphicsFeature::GraphicsProperty" />
        <Property type="PhysicsFeature::PhysicsProperty" />
        <Property type="ScriptingFeature::ScriptingProperty" />
    </Entity>
    <Entity cppclass="Entity" type="Trigger" desc="trigger entity with scripting support">
        <Property type="PhysicsFeature::TriggerProperty" />
        <Property type="ScriptingFeature::ScriptingTriggerProperty" />
    </Entity>   
